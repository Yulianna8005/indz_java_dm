sequenceDiagram
    participant Application
    participant Fisherman
    participant WeatherService
    participant FishingTrip
    participant Sensor
    participant Ecologist
    participant CatchLog
    participant CatchLogService
    
    Application->>WeatherService: get_weather_forecast(location)
    WeatherService-->>Application: forecast dict
    
    Application->>WeatherService: is_suitable_for_fishing(forecast)
    WeatherService-->>Application: bool
    
    alt Weather is suitable
        Application->>Fisherman: check_depth_map()
        Fisherman-->>Application: display map info
        
        Application->>Fisherman:  check_fishing_spots()
        Fisherman-->>Application: display spots
        
        Application->>Ecologist: analyze_environment(location)
        Ecologist-->>Application: display analysis
        
        Application->>FishingTrip: start()
        FishingTrip-->>Application: confirm start
        
        Application->>Fisherman: start_fishing(location)
        Fisherman->>CatchLog: clear()
        CatchLog-->>Fisherman: cleared
        
        Application->>Sensor: measure_temperature()
        Sensor-->>Application: temperature value
        
        Application->>Sensor: measure_water_quality()
        Sensor-->>Application:  quality value
        
        Application->>Ecologist: get_water_condition_report(sensor)
        Ecologist->>Sensor: measure_temperature()
        Sensor-->>Ecologist: temperature
        Ecologist->>Sensor: measure_water_quality()
        Sensor-->>Ecologist: quality
        Ecologist-->>Application: display report
        
        loop For each catch
            Application->>Fisherman: log_catch(fish_species, weight)
            Fisherman->>CatchLog:  add_entry(fish_species, weight)
            CatchLog-->>Fisherman: entry added
            Fisherman->>CatchLogService: save_catch(name, species, weight)
            CatchLogService-->>Fisherman: catch saved to DB
        end
        
        Application->>Fisherman: end_fishing()
        Fisherman->>CatchLog: display_summary()
        CatchLog-->>Fisherman: display summary
        
        Application->>FishingTrip: end()
        FishingTrip-->>Application: confirm end
        
        Application->>Fisherman: get_catch_summary()
        Fisherman->>CatchLogService: get_catch_summary(name)
        CatchLogService-->>Fisherman: summary dict
        Fisherman-->>Application: summary
    else Weather is not suitable
        Application-->>Application:  Expedition postponed
    end